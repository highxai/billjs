{
	"name": "billjs",
	"description": "A comprehensive TypeScript billing engine for invoices, receipts, and POS systems with multi-currency, tax localization, and complex calculations",
	"version": "0.1.0",
	"type": "module",
	"files": [
		"dist",
		"dist/plugins"
	],
	"module": "./dist/plugins/index.js",
	"main": "./dist/plugins/index.cjs",
	"types": "./dist/plugins/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/plugins/index.d.ts",
				"default": "./dist/plugins/index.js"
			},
			"require": {
				"types": "./dist/plugins/index.d.cts",
				"default": "./dist/plugins/index.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"keywords": [
		"billing",
		"invoice",
		"receipt",
		"tax",
		"typescript",
		"finance",
		"pos",
		"ecommerce",
		"currency",
		"calculation"
	],
	"homepage": "https://billjs.highx.dev?utm_src=github",
	"repository": {
		"type": "git",
		"url": "https://github.com/highxai/billjs.git"
	},
	"bugs": {
		"url": "https://github.com/highxai/billjs/issues"
	},
	"license": "MIT",
	"author": "Abu Raihan <aburaihaninbox@gmail.com>",
	"engines": {
		"node": ">=16.0.0"
	},
	"sideEffects": false,
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"prepublishOnly": "bun run build && bun run test",
		"release": "bunup --commit --push --tag --access public",
		"publish:ci": "bun publish --access public --no-git-checks"
	},
	"devDependencies": {
		"@types/bun": "^1.3.0",
		"bunup": "^0.14.20",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"dependencies": {
		"decimal.js": "^10.6.0"
	}
}
